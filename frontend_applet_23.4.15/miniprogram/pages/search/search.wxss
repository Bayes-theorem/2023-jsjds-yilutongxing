/* pages/search/search.wxss */
page{
  background-color: #F7F7F7;
}
.page_row {
  height: 150rpx;
  margin: 4rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #d0d0d0;
  justify-content: space-between;
  align-items: center;
}
.search {
  width: 80%;
  margin: 8rpx;
}
.sousuo {
  background: #26B99A;
  background-color: #26B99A;
  width: 250rpx;
}

.search_arr {
  border: 1px solid #26B99A;
  border-radius: 20rpx;
  margin-left: 10rpx;
  background-color: rgb(252, 244, 233);
}

.search_arr input {
  margin-left: 60rpx;
  height: 80rpx;
  border-radius: 5px;
}

.bc_text {
  line-height: 68rpx;
  height: 68rpx;
  margin-top: 34rpx;
}

.searchcion {
  align-items: center;
  margin: 20rpx 10rpx 20rpx 10rpx;
  position: absolute;
  left: 25rpx;
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}
.shangbu{
    display: flex;
    position: relative;
  }
.textbox {
    margin: 40rpx 40rpx 40rpx 40rpx;
    border: 2rpx solid;
    border-radius: 10px;
    background-color: white;
    border-bottom-color: rgb(153, 153, 153);
    border-top-color: white;
    border-left-color: white;
    border-right-color: white;
    display: flex;
    flex-flow: row; 
  }
  
  .user{
    margin: 40rpx 20rpx;
    height: 150rpx;
    border-radius: 50%;
    overflow:hidden;
    width:100rpx
  }
  .content{
    width: 500rpx;
    height: 100rpx;
  }
  .zhong{
    display: -webkit-box;
    text-align: center;
    font-size: 30rpx;
    justify-content:center;
    margin-top: 13rpx;
    line-height:40rpx;
    text-overflow:ellipsis;
    -webkit-line-clamp:2;
    -webkit-box-orient: vertical;
    word-break: break-all;
    overflow: hidden;
  }
  
  .you{
    align-items: right;
    font-size: 24rpx; 
    position: absolute; 
    right:6rpx;
    top:10rpx
  }
  .shangyou{
    align-items: right;
    font-size: 22rpx; 
    position: absolute; 
    right:0rpx;
    top:10rpx
  }
  .you3{
    align-items: right;
    position:absolute;
    right:60rpx;
    margin:15rpx 5rpx 30rpx 7rpx;
    display: flex;
    flex-flow: row; 
  }
.pinglun{
  width:40rpx;
  height:40rpx;
}
.shu{
  text-align: center;
  margin:0 5rpx 15rpx 7rpx;
  font-size: 26rpx;
}

.zhong{
  text-align: center;
  font-size: 34rpx;
  justify-content:center;
  margin-top: 15rpx;
}