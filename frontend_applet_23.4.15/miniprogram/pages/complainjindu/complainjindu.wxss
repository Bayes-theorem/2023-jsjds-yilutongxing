.contantBox {
    /* 整体样式 */
    padding: 0 20rpx 20rpx 20rpx;
    /* box-shadow: 0px 10rpx 10rpx rgba(102, 102, 102, 0.09); */
    border-radius: 6px;
    background: #FFFFFF;
}
.jindu{
    padding:15rpx 25rpx 10rpx 12rpx;
    font-size:33rpx;
    border-bottom:1px solid #d0d0d0
    
}

.itemBox {
    width: 100%;
    display: flex;
    position: relative;
    z-index: 1;
    height: 100rpx;
    margin:0 0 0 20rpx;
}

.itemLeftBox {
    /* 左边一整条竖线外层盒子的样式 */
    position: relative;
    width: 75rpx;
}

.lineBox {
    /* 左边一整条竖线的样式 */
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    padding-left: 28rpx;
    position: absolute;
    z-index: 1;
}

.longLineBox {
    /* 线的样式 */
    background-color: #adadad;
}

.activelongLineBox {
    /* 线的样式 */
    background-color: #26D396;
}

.topLineBox {
    /* 线的样式 */
    width: 1px;
    height: 60rpx;
}

.bomLineBox {
    /* 线的样式 */
    flex: 1;
    width: 1px;
}

.newestIconBox {
    /* 最新物流信息icon样式 */
    position: absolute;
    z-index: 9999;
    top: 36rpx;
    left: 9rpx;
    width: 40rpx;
    height: 40rpx;
}

.container {
    display: flex;
    flex-direction: row;
    padding: 0;
    flex-wrap: nowrap;
    margin: 5px;
}

.rightBigBox {
    /* 右边物流信息每一个节点的样式 */
    flex: 1;
    padding: 34rpx 0;
    font-size: 12px;
    font-family: SourceHanSansCN-Regular, SourceHanSansCN;
}

.borderBomBox {
    /* 物流信息下划线 */
    border-bottom: 1px solid rgb(243, 241, 241);
}

.unTxtBox {
    color: #999999;
}

.TxtBox {
    color: #26B99A;
}


.timeBox {
    /* 时间样式 */
    margin-top: 2rpx;
    font-size: 10px;
    font-family: SourceHanSansCN-Regular, SourceHanSansCN;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9998;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 36rpx;
}

.modal-title {
    padding-top: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding: 15rpx 32rpx 40rpx 32rpx;
}

.modal-input {
    display: flex;
    background: #fff;
    border: 2rpx solid #ddd;
    border-radius: 3rpx;
    font-size: 28rpx;
    margin-top:40rpx ;
}

.input {
    width: 100%;
    height: 150rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #333;
}

input-holder {
    color: #666;
    font-size: 26rpx;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 84rpx;
}

.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
}

.btn-confirm {
    width: 50%;
    color: #26B99A;
    text-align: center;
}

.pingjiaIcon {
    width: 20px;
    height: 20px;
}
.pingjiaDetail{
    margin-top:6rpx;
}