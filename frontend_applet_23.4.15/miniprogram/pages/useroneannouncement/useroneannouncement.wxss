/* pages/oneannouncement/oneannouncement.wxss */
.coandsi{
  font-size: 32rpx;
  margin:0rpx 35rpx;
  padding: 30rpx 25rpx 15rpx 25rpx;
  background-color: white;
  position: absolute;
  top:40rpx;
  border-radius: 18rpx;
  box-shadow: 0px 10rpx 10rpx rgba(102, 102, 102, 0.09);
  /* #f1f0e3; */
  /* rgb(235, 232, 232); */
}
page{
  background-color: #F7F7F7;
}
.title{
  font-size: 34rpx;
  font-weight:600;
  color:#26b99a ;
}
.luokuan{
  font-size: 26rpx;
  color:black;
  text-align: right;
}
.tool{
  height: 64rpx;
  text-align: right;
  line-height: 64rpx;
  margin: 26rpx 0rpx 10rpx 0;
  }
.tool-item{
  display: inline-block;
  vertical-align: top;
  margin-right: 10rpx;
  }

  .tool-item image{
    height: 36rpx;
    width: 36rpx;
    vertical-align: -3px;
    margin-right: 8rpx;
    }
    .btn { 
      width: 80%;  
      padding: 20rpx 0;  
      border-radius: 10rpx;  
      text-align: center;  
      margin: 40rpx 10%;  
      background: #000;  
      color: #fff;  
    } 
    .show-btn {
      margin-top: 100rpx;
      color: #22cc22;
    }
    .modal-mask {
      width: 100%;
      height: 100%;
      position: fixed;
      top: 0;
      left: 0;
      background: #000;
      opacity: 0.5;
      overflow: hidden;
      z-index: 9998;
      color: #fff;
    }
    .modal-dialog {
      width: 540rpx;
      overflow: hidden;
      position: fixed;
      top: 50%;
      left: 0;
      z-index: 9999;
      background: #f9f9f9;
      margin: -180rpx 105rpx;
      border-radius: 36rpx;
    }
    .modal-title {
      padding-top: 50rpx;
      font-size: 36rpx;
      color: #030303;
      text-align: center;
    }
    .modal-content {
      padding: 50rpx 32rpx;
    }
    .modal-input {
      display: flex;
      background: #fff;
      border: 2rpx solid #ddd;
      border-radius: 3rpx;
      font-size: 28rpx;
    }
    
    .input {
      width: 100%;
      height: 82rpx;
      font-size: 28rpx;
      line-height: 28rpx;
      padding: 0 20rpx;
      box-sizing: border-box;
      color: #333;
    }
    input-holder {
      color: #666;
      font-size: 26rpx;
    }
    
    .modal-footer {
      display: flex;
      flex-direction: row;
      height: 86rpx;
      border-top: 1px solid #dedede;
      font-size: 34rpx;
      line-height: 84rpx;
    }
    .btn-cancel {
      width: 50%;
      color: #666;
      text-align: center;
      border-right: 1px solid #dedede;
    }
    .btn-confirm {
      width: 50%;
      color: #26B99A;
      text-align: center;
    }
    .canvas{
      width: 415rpx;
      height:147rpx;
      position:absolute;
      top:30rpx;
      left:167.5rpx;
      z-index: 999;
  }
.zhengwen{
  font-size: 31rpx;
  text-indent: 2em;
  margin-bottom: 35rpx;
}